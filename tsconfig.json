{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "sourceMap": true,
    "mapRoot": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "lib": [
      "dom",
      "webworker",
      "es6"
    ],
  },
  "include": [
    "src/js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
